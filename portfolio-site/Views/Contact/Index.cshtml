@{
    ViewData["Title"] = "Contact";
}

<div class="small-section">
    <div id="contact-title-container">
        <span id="contact-title">Contact</span>
        <p><span class="text-anim"></span></p>
        <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
        <script>
            var typed = new Typed(".text-anim", {
    strings: ["Work together with you.", "Contact with me."],
    typeSpeed: 100,
    backSpeed: 25,
    loop: true
});
        </script>
    </div>
</div>
<div id="second-section">
     
</div>
<h3 class="headline">Contact Form</h3>
<div id="container-for-form">
    <div id="form-div">
        <form>
            <input id="name" type="text" placeholder="Name" name="name" />
            <input id="email-input" type="email" placeholder="Email" name="email" />
            <textarea id="msg" placeholder="Message" name="text"></textarea>
            <button type="submit" class="btn form-submit" name="send" asp-controller="Contact" asp-action="SendEmail"><span>Send Message</span></button>
        </form>
    </div>
</div>
